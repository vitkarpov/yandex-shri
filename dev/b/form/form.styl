cbSize = 12px

.form
	box-reset()
	width 50%

	&__fieldset
		box-reset()
		margin 25px 0

		&_buttons
			border-top 1px solid #c5c5c5
			padding-top 25px
			text-align right

	&__line
		position relative
		margin 25px 0

	&__lineNum
		float left
		width 20px
		padding-right 15px
		margin-left -35px
		text-align right

		&:before
			content "#"
			color #c5c5c5
			font-size fontSizeBase - 2
			margin-right 2px
	
	&__required

		&:after
			color red
			vertical-align top
			font-size fontSizeBase - 2
			width 6px
			margin-right -6px
			margin-left 2px
			content "*"

	&__input
		box-reset()
		width 100%
		resize none
		box-sizing border-box
		box-shadow inset 0 1px 2px 0 rgba(0,0,0,0.3)
		padding 5px 10px
		font-size 14px
		line-height 18px
	
	&__text
		margin-bottom 18px
		padding-right 30px

	&__checkboxLine
		display block
		position relative
		margin 4px 0
		padding-left 20px

		input
			position absolute
			left 0
			top 4px
			box-reset()	
	
	&__content
		overflow hidden
		max-height 700px
		opacity 1

		.form_js_inited &
			transition all 0.3s ease-in

		.form__line_closed &
			max-height 0
			opacity 0

			.form__js_inited &
				transition all 0.3s ease-out
			

	&__switcher
		position absolute
		right 0
		top 0
		width 30px
		height @width
		margin-top -5px
		margin-right -10px
		cursor pointer
		text-align center
		line-height 30px
		opacity 0.5
		transition opacity 0.2s ease

		.form__line:hover &
			opacity 1

		&:after
			content 'â€“'

		.form__line_closed &

			&:after
				content '+'		